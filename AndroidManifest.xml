<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.anzix.osm.upload"
          android:versionCode="5"

          android:versionName="1.4">


    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-sdk android:minSdkVersion="6"></uses-sdk>

    <application
            android:icon="@drawable/icon"
            android:name=".GpxUploadApplication"
            android:label="@string/app_name">

        <activity
                android:name=".GpxList"
                android:label="OSMGpxUploader"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".SourceList"
                android:label="Gpx sources"/>
        <activity
                android:name=".UploadForm"
                android:label="@string/app_name"
                android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/gpx+xml"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="application/gpx"/>
            </intent-filter>


        </activity>

        <activity android:name="Preferences">


        </activity>
        <activity android:name="FileDialog"></activity>


    </application>
</manifest>

